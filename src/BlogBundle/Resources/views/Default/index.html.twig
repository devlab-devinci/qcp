{% extends 'corps.html.twig' %}

{% block body %}
<!-- HEADER -->

<div class="container-fluid">
    <div class="row header-standard">
        <div class="col-sm-12">
            <h1>Actualités</h1>
        </div>
    </div>
</div>

<div class="container mt-5 mb-5 text-center">
    <div class="row">
        <div class="col-sm-12 mb-4">
            <h2>Nos derniers articles</h2>
        </div>
        {% for article in articles %}
            <div class="col-sm-4">
                <a href="{{ path('blog_singlepage', {slug: article.id}) }}" class="link-article">
                    <div class="card">
                        <p class="lire">Lire l'article</p>
                        <img class="card-img-top" src="{{ article.banner }}" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">{{ article.title }}</p>
                        </div>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
</div>

<div class=" mt-5 mb-5 text-center">
    <h2> Nous contacter ?</h2>

    <p class="text-center">Insérer un formulaire</p>
</div>

{% endblock %}