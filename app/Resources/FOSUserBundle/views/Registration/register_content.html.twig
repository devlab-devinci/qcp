{% extends 'corps.html.twig' %}

{% block body %}

{% trans_default_domain 'FOSUserBundle' %}

    <div class="container-fluid header-log">
        <div class="row ">
            <div class="col-sm-12">
                <h1>Inscription</h1>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="logbox bg-white">
                    <div class="row">
                        <div class="col-sm-6">
                            <a class="cardcollapse" data-toggle="collapse" href="#collaspeInv" role="button" aria-expanded="false" aria-controls="collaspeInv">
                                <div class="card nomarg invcard">
                                    <div class="card-body">
                                        <h5 class="card-title">Je veux être investisseur</h5>
                                        <p class="card-text">Je souhaite investir.</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="col-sm-6">
                            <a class="cardcollapse" data-toggle="collapse" href="#collaspeLoc" role="button" aria-expanded="false" aria-controls="collaspeLoc">
                                <div class="card nomarg loccard">
                                    <div class="card-body">
                                        <h5 class="card-title">Je veux être locataire</h5>
                                        <p class="card-text">Je souhaite trouver un garant.</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container collapse" id="collaspeInv">
            <div class="row">
                <div class="logbox bg-white text-left">
                    <div class="row mb-4">
                        <div class="col-sm-12 text-center">
                            <span class="step s-active">Étape 1</span>  <span class="step">Étape 2</span>  <span class="step">Étape 3</span>
                        </div>
                    </div>
                    <form method="post">
                        <input type="hidden" name="step_next" value="2">
                        <h2 class="text-center">Informations générales</h2>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="name">Prénom</label>
                                <input type="name" class="form-control" id="name" placeholder="Prénom">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="name">Nom</label>
                                <input type="name" class="form-control" id="name" placeholder="Nom">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="date">Date de naissance</label>
                                <input type="date" class="form-control" id="date" placeholder="">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputEmail4">Email</label>
                                <input type="email" class="form-control" id="inputEmail4" placeholder="Email">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputPassword4">Mot de passe</label>
                                <input type="password" class="form-control" id="inputPassword4" placeholder="Mot de passe">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="confirmpassword">Confirmation du mot de passe</label>
                                <input type="password" class="form-control" id="confirmpassword" placeholder="Confirmation du mot de passe">
                            </div>

                        </div>

                        <div class="form-row justify-content-end">
                            <a href="inscription-inv-2.html"><button type="submit" class="btn btn-primary">S'inscire</button></a>
                        </div>
                    </form>
                </div>
            </div>
        </div>


        <div class="container collapse" id="collaspeLoc">
            <div class="row">
                <div class="logbox bg-white text-left">
                    <div class="row mb-4">
                        <div class="col-sm-12 text-center">
                            <span class="step s-active">Étape 1</span>  <span class="step">Étape 2</span>
                        </div>
                    </div>
                    <form method="post">
                        <input type="hidden" name="step_next" value="2">
                        <h2 class="text-center">Informations générales</h2>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="firstname">Prénom</label>
                                <input type="firstname" class="form-control" id="firstname" placeholder="Prénom">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="name">Nom</label>
                                <input type="name" class="form-control" id="name" placeholder="Nom">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="date">Date de naissance</label>
                                <input type="date" class="form-control" id="date" placeholder="">
                            </div>

                            <div class="form-group col-md-6">
                                <label for="email">Email</label>
                                <input type="email" class="form-control" id="email" placeholder="Email">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="password">Mot de passe</label>
                                <input type="password" class="form-control" id="password" placeholder="Mot de passe">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="confirmpassword">Confirmation du mot de passe</label>
                                <input type="password" class="form-control" id="confirmpassword" placeholder="Confirmation du mot de passe">
                            </div>


                            <div class="form-group col-md-6">
                                <label class="my-1 mr-2" for="statut">Je vis en tant que...</label>
                                <select class="custom-select my-1 mr-sm-2" id="statut">
                                    <option selected>Célibataire</option>
                                    <option value="1">Marié</option>
                                    <option value="2">Divorcé</option>
                                    <option value="3">Pacsé</option>
                                    <option value="4">Veuf</option>
                                </select>
                            </div>

                            <div class="form-group col-md-6">
                                <label class="my-1 mr-2" for="situation">Quelle est votre situation professionnelle ?</label>
                                <select class="custom-select my-1 mr-sm-2" id="situation">
                                    <option selected>Étudiant</option>
                                    <option value="1">Salarié</option>
                                    <option value="1">Alternant</option>
                                    <option value="1">Au chômage</option>
                                    <option value="1">Autre...</option>
                                </select>
                            </div>

                            <div class="form-group col-md-6 ifsalarie">
                                <label class="my-1 mr-2" for="contrat">Quel type de contrat avez-vous ?</label>
                                <select class="custom-select my-1 mr-sm-2" id="contrat">
                                    <option selected>CDD</option>
                                    <option value="1">CDI</option>
                                    <option value="1">Autre..</option>
                                </select>
                            </div>

                            <div class="form-group col-md-6">
                                <label class="my-1 mr-2" for="charge">Combien de personnes avez-vous à votre charge ?</label>
                                <select class="custom-select my-1 mr-sm-2" id="charge">
                                    <option selected>0</option>
                                    <option value="1">1</option>
                                    <option value="1">2 et plus</option>
                                </select>
                            </div>

                            <div class="form-group col-md-6">
                                <label class="my-1 mr-2" for="bail">Combien de personnes sur le bail </label>
                                <select class="custom-select my-1 mr-sm-2" id="bail">
                                    <option selected>0</option>
                                    <option value="1">1</option>
                                    <option value="1">2 et plus</option>
                                </select>
                            </div>

                            <div class="form-group col-md-6">
                                <label class="my-1 mr-2" for="loyer">Pour un loyer mensuel en euros de </label>
                                <input type="number" class="form-control my-1 mr-sm-2" id="loyer" placeholder="Loyer mensuel">
                            </div>

                            <div class="form-group col-md-6">
                                <label class="my-1 mr-2" for="qsp">Vous avez entendu parler de QSP grâce à </label>
                                <select class="custom-select my-1 mr-sm-2" id="qsp">
                                    <option selected>Un ami</option>
                                    <option value="1">Une exposition</option>
                                    <option value="1">Un site internet</option>
                                    <option value="1">Une recherche sur un moteur de recherche</option>
                                    <option value="1">Autre...</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-row justify-content-end">
                            <a href="#"><button type="submit" class="btn btn-primary">S'inscire</button></a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
    {{ form_widget(form) }}
    <div>
        <input type="submit" value="{{ 'registration.submit'|trans }}" />
    </div>
{{ form_end(form) }}

{% endblock %}
