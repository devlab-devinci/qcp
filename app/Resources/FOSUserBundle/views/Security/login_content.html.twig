{% extends 'corps.html.twig' %}

{% block body %}

{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

    <div class="container-fluid header-log">
        <div class="row ">
            <div class="col-sm-12">
                <h1>Connexion</h1>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class=" logbox bg-white">
                    <form action="{{ path("fos_user_security_check") }}" method="post">
                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}
                        <div class="form-row">
                            <div class="form-group col-md-6 text-left">
                                <label for="inputLabel">Username</label>
                                <input type="text" name="_username" class="form-control" id="inputLabelEmail" placeholder="Username">
                            </div>
                            <div class="form-group col-md-6 text-left">
                                <label for="inputLabelPassword">Mot de passe</label>
                                <input type="password" name="_password" class="form-control" id="inputLabelPassword" placeholder="Mot de passe">
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-sm-8 text-left">
                                <div class="form-check form-check-inline ">
                                    <input name="_remember_me" class="form-check-input" type="checkbox" id="inlineCheckbox1" value="on">
                                    <label class="form-check-label" for="inlineCheckbox1">Rester connect√© pour une semaine</label>
                                </div>                      </div>
                            <div class="col-sm-4 text-right">
                                <button type="submit" class="btn btn-primary">Se connecter</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>


        <div class="container">
            <div class="row">
                <div class="logbox bg-white text-center">
                    <div class="col-sm-12 text-center">
                        <p>Vous n'avez pas encore de compte ? </p>
                        <a href="{{ path('fos_user_registration_register') }}"><button type="submit" class="btn btn-primary">S'inscrire</button></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}